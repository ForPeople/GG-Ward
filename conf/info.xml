<?xml version="1.0" encoding="UTF-8"?>
<widget version="0.2">
	<title xml:lang="ko">GG 와드 위젯</title>
	<title xml:lang="en">GG Ward Widget</title>
    <description xml:lang="ko">와드를 선택한 게시물에 댓글이 달리면 메일을 보내줍니다.</description>
    <version>0.2</version>
    <date>2016-03-07</date>
    <author email_address="xeadmin@forppl.com" link="http://xeadmin.com">
        <name xml:lang="ko">GG</name>
		<name xml:lang="en">GG</name>
    </author>
    <extra_vars>
		<var id="align" type="select">
		<name xml:lang="ko">버튼 위치</name>
			<options>
				<value>left</value>
				<name xml:lang="ko">왼쪽</name>
			</options>
			<options>
				<value>center</value>
				<name xml:lang="ko">가운데</name>
			</options>
			<options>
				<value>right</value>
				<name xml:lang="ko">오른쪽</name>
			</options>
		</var>
		<var id="before_btn_name" type="text">
		<name xml:lang="ko">등록 전 버튼 텍스트</name>
		</var>
		<var id="after_btn_name" type="text">
		<name xml:lang="ko">등록 후 버튼 텍스트</name>
		</var>
    </extra_vars>
</widget>
